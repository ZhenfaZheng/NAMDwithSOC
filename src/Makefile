#-------------------------------------------------------------------------------
# defaults
#-------------------------------------------------------------------------------
FC= ifort -assume byterecl
FC= gfortran
#FFLAGS= -g -O2
FFLAGS= -g -O2 -DZZF_VERSION
MAKE = make

#-------------------------------------------------------------------------------
# Src
#-------------------------------------------------------------------------------

SRC = prec.f90 lattice.f90 wave.f90 fileio.f90 soc.f90 couplings.f90 hamil.f90 \
   	TimeProp.f90 SurfHop.f90  main.f90

OBJ = $(SRC:.f90=.o)
EXE = namd_soc

#-------------------------------------------------------------------------------
# Suffix rules
#-------------------------------------------------------------------------------
.SUFFIXES: .o .f90
.f90.o:
	$(FC) $(FFLAGS) -c $<

.SUFFIXES: .o .F90
.F90.o:
	$(FC) $(FFLAGS) -c $<

#-------------------------------------------------------------------------------
# Targets
#-------------------------------------------------------------------------------
tdm:	$(OBJ)
	$(FC) $(FFLAGS) -o $(EXE) $(OBJ) $(SPGLIB)  

clean:
	rm -f *.mod *.a namd
	rm -f $(OBJ) $(EXE)
tar:
	tar -czvf namd_soc.tgz *.f90 *F90 Makefile
tag:
	ctags *.f90
